{
  "compilerOptions": {
    "outFile": "public/lib.js",
    "sourceMap": true,

    "jsx": "react",
    "module": "system",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es5", "es6", "dom"],
    "baseUrl": ".",
    "paths": {
      "lib/*": [ "src/*" ],
      "*": [ "node_modules/types/*", "node_modules/*" ]
    }
  },
  "include": [
    "src/client/**/*.ts",
    "src/protocol/**/*.ts"
  ]
}
